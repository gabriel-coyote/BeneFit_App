<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_v1">

    <ImageView
        android:id="@+id/StepSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/WaterSquare"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/workoutpage_rectangle" />

    <ImageView
        android:id="@+id/WaterSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/workoutpage_rectangle" />

    <ImageView
        android:id="@+id/CaloriesSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/WaterSquare"
        app:srcCompat="@drawable/workoutpage_rectangle" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/CaloriesSquare"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/workoutpage_rectangle" />

    <TextView
        android:id="@+id/StepsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="69dp"
        android:fontFamily="@font/roboto"
        android:text="Steps"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/StepSquare"
        app:layout_constraintTop_toTopOf="@+id/StepSquare" />

    <TextView
        android:id="@+id/WorkoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="Workouts"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/imageView23"
        app:layout_constraintTop_toTopOf="@+id/imageView23" />

    <TextView
        android:id="@+id/WaterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="65dp"
        android:text="Water"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/WaterSquare"
        app:layout_constraintTop_toTopOf="@+id/WaterSquare" />

    <TextView
        android:id="@+id/CaloriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="51dp"
        android:text="Calories"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/CaloriesSquare"
        app:layout_constraintTop_toTopOf="@+id/CaloriesSquare" />

    <ImageView
        android:id="@+id/firePic"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="@+id/CaloriesSquare"
        app:layout_constraintTop_toTopOf="@+id/CaloriesSquare"
        app:srcCompat="@drawable/icon_flame_outline" />

    <ImageView
        android:id="@+id/workoutsPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView23"
        app:layout_constraintTop_toTopOf="@+id/imageView23"
        app:srcCompat="@drawable/bench_press" />

    <ImageView
        android:id="@+id/stepsPic"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintEnd_toEndOf="@+id/StepSquare"
        app:layout_constraintTop_toTopOf="@+id/StepSquare"
        app:srcCompat="@drawable/running" />

    <ImageView
        android:id="@+id/waterPic"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintEnd_toEndOf="@+id/WaterSquare"
        app:layout_constraintTop_toTopOf="@+id/WaterSquare"
        app:srcCompat="@drawable/ic_water_drop" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/orbitron"
        android:text="Your Activity"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/StepSquare"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/StepsProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="78dp"
        android:layout_height="74dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="44dp"
        android:progressTint="#3CF4DA"
        app:layout_constraintBottom_toBottomOf="@+id/StepSquare"
        app:layout_constraintEnd_toEndOf="@+id/StepSquare" />

    <ProgressBar
        android:id="@+id/CaloriesProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="74dp"
        android:layout_height="82dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toBottomOf="@+id/CaloriesSquare"
        app:layout_constraintEnd_toEndOf="@+id/CaloriesSquare" />

    <ImageView
        android:id="@+id/StartWorkoutsIcon"
        android:layout_width="75dp"
        android:layout_height="76dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView23"
        app:layout_constraintEnd_toEndOf="@+id/imageView23"
        app:srcCompat="@drawable/start_workouts" />

    <ProgressBar
        android:id="@+id/WaterProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="72dp"
        android:layout_height="79dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/WaterSquare"
        app:layout_constraintEnd_toEndOf="@+id/WaterSquare" />

</androidx.constraintlayout.widget.ConstraintLayout>