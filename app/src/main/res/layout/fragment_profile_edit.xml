<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/main_gradiant"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/orbitron"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:translationX="0dp"
            android:translationY="150dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/orbitron"
            android:text="Username"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:translationY="150dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    First Name"
            android:textColor="@android:color/darker_gray"
            android:translationX="5dp"
            android:translationY="175dp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_bg"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="50dp"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:translationX="5dp"
            android:translationY="175dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    Last Name"
            android:textColor="@android:color/darker_gray"
            android:translationX="5dp"
            android:translationY="175dp" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_bg"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="50dp"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:translationX="5dp"
            android:translationY="175dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    Email"
            android:textColor="@android:color/darker_gray"
            android:translationX="5dp"
            android:translationY="175dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_bg"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingStart="50dp"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:translationX="5dp"
            android:translationY="175dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    Phone Number"
            android:textColor="@android:color/darker_gray"
            android:translationX="5dp"
            android:translationY="175dp" />

        <EditText
            android:id="@+id/editTextPhone2"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_bg"
            android:ems="10"
            android:inputType="phone"
            android:paddingStart="50dp"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:translationX="5dp"
            android:translationY="175dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    Password"
            android:textColor="@android:color/darker_gray"
            android:translationX="5dp"
            android:translationY="175dp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_bg"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingStart="50dp"
            android:paddingEnd="5dp"
            android:translationX="5dp"
            android:translationY="175dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:translationX="25dp"
            android:translationY="-67dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName3"
            app:srcCompat="@drawable/ic_person" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:translationX="25dp"
            android:translationY="-160dp"
            app:srcCompat="@drawable/ic_person" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:translationX="25dp"
            android:translationY="-50dp"
            app:srcCompat="@drawable/icon_email" />

        <Button
            android:id="@+id/button2"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:background="@drawable/round_corner_v2"
            android:capitalize="none"
            android:fontFamily="@font/orbitron"
            android:rotationY="0"
            android:text="Save"
            android:textColor="#FDFCFC"
            android:translationX="20dp"
            android:translationY="120dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="25dp"

            android:translationX="25dp"
            android:translationY="-55dp"
            app:srcCompat="@drawable/icon_key" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:translationX="25dp"
            android:translationY="-15dp"
            app:srcCompat="@drawable/icon_key" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationX="150dp"
            android:translationY="-500dp"
            app:srcCompat="@drawable/bf_logo" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>